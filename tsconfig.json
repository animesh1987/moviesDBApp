{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "strictNullChecks": false,

    "noImplicitAny": false,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "lib": ["dom", "es2015", "es7"],

    "baseUrl": "./client",
    "sourceMap": true,
    "outDir": "./build/ts"
  },
  "exclude": ["node_modules", "build"]
}
